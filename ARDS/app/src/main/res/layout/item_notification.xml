<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_notification"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:visibility="gone"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/profile"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toolkit Test Notification Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <!-- Train Name -->
            <TextView
                android:id="@+id/tv_trainName"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="Sampoorna Kranti Express(12397)"
                android:layout_below="@+id/tv_notification_title"
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <!-- Train Number -->
            <TextView
                android:id="@+id/tv_train_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_notification_title"
                android:text="Left Side"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"/>

            <!-- Route Details -->
            <TextView
                android:id="@+id/tv_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New DELHI"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_below="@id/tv_trainName"
                android:layout_marginTop="4dp"/>

            <!-- Time Details -->
            <TextView
                android:id="@+id/tv_raisedtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06 Mar, 2025"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_below="@id/tv_raisedby"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tv_raisedby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="Raised By: Ruchi Dogra (9904936703)"
                android:layout_below="@+id/tv_station"/>



            <!-- Arrow Button -->
            <ImageView
                android:id="@+id/btn_arrowIcon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/custom_arrow"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tv_train_side"
                />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
