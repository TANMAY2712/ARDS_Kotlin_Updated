<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- APP BAR (TOP TOOLBAR) -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/grey"
            app:layout_scrollFlags="scroll|enterAlways"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Large">

            <!-- Centered Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Railway Rolling Stock Inspector"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:layout_gravity="center"/>

            <!-- Right-Side Logo -->

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/wus_logo"
                />

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_notifications_black_24dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- MAIN CONTENT (BELOW TOOLBAR) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >

                <!-- Header Image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/back_home"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"/>

                <!-- Graph Section -->

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <!-- First Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_one"
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="6dp"
                            app:cardBackgroundColor="@android:color/white"
                            android:layout_marginEnd="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Defects per Station"
                                    android:textSize="12sp"
                                    android:gravity="center"
                                    android:textColor="#555"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp"/>

                                <com.github.mikephil.charting.charts.PieChart
                                    android:id="@+id/pieChart"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Second Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_two"
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="6dp"
                            app:cardBackgroundColor="@android:color/white"
                            android:layout_marginEnd="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Repair Cost by Severity"
                                    android:textSize="12sp"
                                    android:gravity="center"
                                    android:textColor="#555"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp"/>

                                <com.github.mikephil.charting.charts.BarChart
                                    android:id="@+id/barChart"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Third Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_three"
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="6dp"
                            app:cardBackgroundColor="@android:color/white"
                            android:layout_marginEnd="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Defects Over Time"
                                    android:textSize="12sp"
                                    android:gravity="center"
                                    android:textColor="#555"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp"/>

                                <com.github.mikephil.charting.charts.LineChart
                                    android:id="@+id/lineChart"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Fourth Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_four"
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="6dp"
                            app:cardBackgroundColor="@android:color/white"
                            android:layout_marginEnd="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Defect Source Breakdown"
                                    android:textSize="12sp"
                                    android:gravity="center"
                                    android:textColor="#555"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp"/>

                                <com.github.mikephil.charting.charts.BarChart
                                    android:id="@+id/defect_source_breakdown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Fifth Card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_five"
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="6dp"
                            app:cardBackgroundColor="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Troubleshoot Period"
                                    android:textSize="12sp"
                                    android:gravity="center"
                                    android:textColor="#555"
                                    android:textStyle="bold"
                                    android:layout_marginBottom="8dp"/>

                                <com.github.mikephil.charting.charts.BarChart
                                    android:id="@+id/troubleshooting"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/graphRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:visibility="gone"
                    android:paddingHorizontal="10dp"
                    tools:listitem="@layout/graph_card"
                    tools:itemCount="1"/>

                <!-- Recents Section -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recents Issue:"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Northern Railway (Delhi Division)"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/home_progress"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/purple_500"
                    android:elevation="10dp"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recentTrainsRecyclerView"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="10dp"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/recents_item"
                    tools:itemCount="1"
                    android:paddingTop="8dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
