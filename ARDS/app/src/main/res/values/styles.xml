<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OtpEditTextStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/otp_box</item>
    </style>

    <style name="ScanModeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:background">@drawable/scan_button_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
</resources>